{% extends '@App/admin/layout.html.twig' %}

{% block title %}Table List | WakeUpCafe{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('app_admin_homepage') }}">Dashboard</a></li>
        <li class="active">Table List</li>
    </ol>

    <div class="page-header">
        <h1>Table List <br class="visible-xs"><small>Here you can see list all of you tables</small></h1>
    </div>

    <div class="text-right">
        <a class="btn btn-default" href="{{ path('app_admin_bench_add') }}"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Add New</a>
    </div>

    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Number Of Person</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if pagination.getTotalItemCount == 0 %}
                <tr>
                    <td colspan="4" class="text-center"><h4>There is no a tables, create new! =(</h4></td>
                </tr>
            {% endif %}
            {% for bench in pagination %}
                <tr>
                    <td>{{ bench.id }}</td>
                    <td>{{ bench.name }}</td>
                    <td>{{ bench.numberOfPerson }}</td>
                    <td>{{ bench.description }}</td>
                    <td>
                        <a href="{{ path('app_admin_bench_edit', {bench: bench.id}) }}" class="btn btn-xs btn-default"><span class="fa fa-pencil"></span> Edit</a>
                        <a href="{{ path('app_admin_bench_delete', {bench: bench.id}) }}" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
