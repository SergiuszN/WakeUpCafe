{% extends '@App/admin/layout.html.twig' %}

{% block title %}Reservation List | WakeUpCafe{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('add_admin_homepage') }}">Dashboard</a></li>
        <li class="active">Reservation List</li>
    </ol>

    <div class="page-header">
        <h1>Reservation List <br class="visible-xs"><small>Here you can see list all of you reservations</small></h1>
    </div>

    <div class="text-right">
        <a class="btn btn-default" href="{{ path('add_admin_reservation_add') }}"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Create New</a>
    </div>

    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Table</th>
                <th>Number Of Person</th>
                <th>Name</th>
                <th>Author</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if pagination.getTotalItemCount == 0 %}
                <tr>
                    <td colspan="8" class="text-center"><h4>There is no a reservations in your database =(</h4></td>
                </tr>
            {% endif %}
            {% for reservation in pagination %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.date | date('Y-m-d') }}</td>
                    <td>{{ reservation.table }}</td>
                    <td>{{ reservation.numberOfPerson }}</td>
                    <td>{{ reservation.name }}</td>
                    <td>{{ reservation.author.username }}</td>
                    <td>
                        <a href="{{ path('add_admin_reservation_switch_state', {reservation: reservation.id}) }}" class="text-muted">
                            {% if reservation.state %} <span class="fa fa-check"></span> {% else %} <span class="fa fa-times"></span> {% endif %}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('add_admin_reservation_edit', {reservation: reservation.id}) }}" class="btn btn-xs btn-default"><span class="fa fa-pencil"></span> Edit</a>
                        <a href="{{ path('add_admin_reservation_delete', {reservation: reservation.id}) }}" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}