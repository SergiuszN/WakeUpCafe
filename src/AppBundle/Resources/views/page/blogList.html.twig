{% extends '@App/layout.html.twig' %}

{% block body %}
    <div class="container">

        <div class="page-header">
            <h1>Blog Wake Up Cafe <br class="visible-xs"><small>Sprawd≈∫ nasze posty!</small></h1>
        </div>

        {% for post in pagination %}
            <div class="container-fluid">
                <div class="row">
                    <a href="{{ path('app_blog_post', {post: post.id}) }}"> <h2>{{ post.title }}</h2> </a>
                    <p class="lead">{{ post.date | date('Y-m-d H:i:s') }}</p>
                </div>
                <div class="row max-images-limit">
                    {{ post.contentPreview|raw }}
                </div>
                <div class="row">
                    <a href="{{ path('app_blog_post', {post: post.id}) }}" class="btn btn-primary">Czytaj dalej...</a>
                </div>
                <hr>
            </div>
        {% endfor %}

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}